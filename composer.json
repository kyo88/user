{
    "name": "black/user",
    "type": "library",
    "description": "User component for Black projects",
    "keywords": ["library", "black-poject", "user"],
    "homepage": "http://www.lablackroom.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre Balmes",
            "email": "alexandre@lablackroom.com",
            "homepage": "http://www.lablackroom.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Black\\": "src/",
            "Black\\Bundle\\UserBundle\\": "src/User/Infrastructure/Symfony/UserBundle/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "./common"
        }
    ],
    "require": {
        "php": ">=7.0",
        "monolog/monolog": "~1.10",
        "symfony/event-dispatcher": "~2.5|~3.1",
        "symfony/http-kernel": "~2.5|~3.1",
        "symfony/http-foundation": "~2.5|~3.1",
        "black/common": "dev-master",
        "black/cqrs-php": "dev-master",
        "black/email": "~1.2"
    },
    "require-dev": {
        "behat/behat": "~3.0",
        "phpspec/phpspec": "^2.4",
        "memio/spec-gen": "^0.4",
        "rmiller/behat-spec": "^0.3.0"
    },
    "support": {
        "issues": "https://github.com/pocky/user/issues"
    }
}
