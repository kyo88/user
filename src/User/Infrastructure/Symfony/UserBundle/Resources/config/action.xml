<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="black_user.application.action.active.class">Black\User\Application\Action\ActiveUser</parameter>
        <parameter key="black_user.application.action.disable.class">Black\User\Application\Action\DisableUser</parameter>
        <parameter key="black_user.application.action.lock.class">Black\User\Application\Action\LockUser</parameter>
        <parameter key="black_user.application.action.unlock.class">Black\User\Application\Action\UnlockUser</parameter>
        <parameter key="black_user.application.action.create.class">Black\User\Application\Action\CreateUser</parameter>
        <parameter key="black_user.application.action.update_account.class">Black\User\Application\Action\UpdateAccount</parameter>
        <parameter key="black_user.application.action.update_password.class">Black\User\Application\Action\UpdatePassword</parameter>
        <parameter key="black_user.application.action.list.class">Black\User\Application\Action\ListUsers</parameter>
        <parameter key="black_user.application.action.remove.class">Black\User\Application\Action\RemoveUser</parameter>
        <parameter key="black_user.application.action.show.class">Black\User\Application\Action\ShowUser</parameter>
    </parameters>

    <services>

        <service id="black_user.application.action.active" class="%black_user.application.action.active.class%">
            <argument type="service" id="black_cqrs.infrastructure.command.bus" />
            <argument type="service" id="black_user.infrastructure.cqrs.handler.active" />
            <argument>Black\User\Infrastructure\CQRS\Command\ActiveUserCommand</argument>
        </service>

        <service id="black_user.application.action.disable" class="%black_user.application.action.disable.class%">
            <argument type="service" id="black_cqrs.infrastructure.command.bus" />
            <argument type="service" id="black_user.infrastructure.cqrs.handler.disable" />
            <argument>Black\User\Infrastructure\CQRS\Command\DisableUserCommand</argument>
        </service>

        <service id="black_user.application.action.lock" class="%black_user.application.action.lock.class%">
            <argument type="service" id="black_cqrs.infrastructure.command.bus" />
            <argument type="service" id="black_user.infrastructure.cqrs.handler.lock" />
            <argument>Black\User\Infrastructure\CQRS\Command\LockUserCommand</argument>
        </service>

        <service id="black_user.application.action.unlock" class="%black_user.application.action.unlock.class%">
            <argument type="service" id="black_cqrs.infrastructure.command.bus" />
            <argument type="service" id="black_user.infrastructure.cqrs.handler.unlock" />
            <argument>Black\User\Infrastructure\CQRS\Command\UnlockUserCommand</argument>
        </service>

        <service id="black_user.application.action.create" class="%black_user.application.action.create.class%">
            <argument type="service" id="black_cqrs.infrastructure.command.bus" />
            <argument type="service" id="black_user.infrastructure.cqrs.handler.create" />
            <argument>Black\User\Infrastructure\CQRS\Command\CreateUserCommand</argument>
        </service>

        <service id="black_user.application.action.update_account" class="%black_user.application.action.update_account.class%">
            <argument type="service" id="black_cqrs.infrastructure.command.bus" />
            <argument type="service" id="black_user.infrastructure.cqrs.handler.update_account" />
            <argument>Black\User\Infrastructure\CQRS\Command\UpdateAccountCommand</argument>
        </service>

        <service id="black_user.application.action.update_password" class="%black_user.application.action.update_password.class%">
            <argument type="service" id="black_cqrs.infrastructure.command.bus" />
            <argument type="service" id="black_user.infrastructure.cqrs.handler.update_password" />
            <argument>Black\User\Infrastructure\CQRS\Command\UpdatePasswordCommand</argument>
        </service>

        <service id="black_user.application.action.list" class="%black_user.application.action.list.class%">
            <argument type="service" id="black_user.infrastructure.service.read" />
        </service>

        <service id="black_user.application.action.remove" class="%black_user.application.action.remove.class%">
            <argument type="service" id="black_cqrs.infrastructure.command.bus" />
            <argument type="service" id="black_user.infrastructure.cqrs.handler.remove" />
            <argument>Black\User\Infrastructure\CQRS\Command\RemoveUserCommand</argument>
        </service>

        <service id="black_user.application.action.show" class="%black_user.application.action.show.class%">
            <argument type="service" id="black_user.infrastructure.service.read" />
        </service>

    </services>
</container>
